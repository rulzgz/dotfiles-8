label-muted =  Muted
label-muted-foreground = ${colors.medium}

label-volume-padding = 3
label-muted-padding = 3


[module/memory]
type = internal/memory
interval = 1
label =  %percentage_used%%

label-padding = 3

label-foreground = ${colors.magenta}


[module/cpu]
type = internal/cpu
interval = 1
label =  %percentage%%

label-padding = 3

label-foreground = ${colors.yellow}


[module/battery]
