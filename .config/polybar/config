[global/wm]
margin-top = 0
margin-bottom = 0


[settings]
screenchange-reload = true


[colors]
background = #282A36
foreground = #F8F8F2

dark = #1E1F26
medium = #474b61
light = #E6E6E6

red = #FF5555
magenta = #FF79C6
blue = #BD93F9
cyan = #8BE9FD
green = #50FA7B
yellow = #F1FA8C
orange = #FF9F55

; Coloured Powerline glyphs couldn't be defined as variables
; without resorting to environment variables, and I figured
; it would be more work to edit another file rather than just
; scroll down and set the colours here. Sorry. See more here:
; https://github.com/jaagr/polybar/issues/615


[bar/kobra]
font-0 = Wuncon Siji:pixelsize=10;2
font-1 = Terminus:size=12;2
font-2 = FontAwesome:pixelsize=16;2
font-3 = xos4 Terminess Powerline:size=28;4

bottom = false
dock = false
width = 100%
height = 26
offset-x = 0
offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}

border-bottom = 1
border-bottom-color = ${colors.dark}

spacing = 0
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0

modules-left = i3 powerline-suffix xwindow
modules-center =
modules-right = volume memory cpu battery date powerline-prefix rofi

fixed-center = false

tray-position = right
tray-padding = 4
tray-maxsize = 26
tray-background = ${colors.dark}


[module/i3]
type = internal/i3
format = <label-mode><label-state>
index-sort = true
enable-click = true
enable-scroll = true
wrapping-scroll = false

